{% extends 'base.html.twig' %}

{% block title %}Modification utilisateur{% endblock %}

{% block body %}
<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-10">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Modifier l'utilisateur</h3>
                        </div>
                        {{ form_start(formedit) }}
                            <div class="card-body">
                                {% if form_errors(formedit) %}
                                    <div class="alert alert-danger">{{ form_errors(formedit) }}</div>
                                {% endif %} 
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Email</label>
                                    {{ form_widget(formedit.email, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Nom</label>
                                    {{ form_widget(formedit.lastname, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Pr√©nom</label>
                                    {{ form_widget(formedit.firstname, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                                <div class="">
                                    <label class="required">Roles</label>
                                    {% for role in formedit.roles %}
                                        <div class="form-check">
                                            {{ form_widget(role, { 'attr': {'class': 'form-check-input'} }) }}
                                            {{ form_label(role) }}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Valider</button>
                            </div>
                        {{ form_end(formedit) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
  </div>
{% endblock %}