{% extends 'base.html.twig' %}

{% block title %}Modification utilisateur{% endblock %}

{% block body %}

<div class="row">
    <!-- left column -->
    <div class="col-md-10">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Modifier l'utilisateur</h3>
            </div>
            {{ form_start(formedit) }}
                <div class="card-body">
                    {% if form_errors(formedit) %}
                        <div class="alert alert-danger">{{ form_errors(formedit) }}</div>
                    {% endif %} 
                    <div class="form-group">
                        <label  >Email</label>
                        {{ form_widget(formedit.email, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="form-group">
                        <label  >Nom</label>
                        {{ form_widget(formedit.lastname, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="form-group">
                        <label  >Pr√©nom</label>
                        {{ form_widget(formedit.firstname, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="form-group">
                        <label  >Profession</label>
                        {{ form_widget(formedit.profession, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="form-group">
                        <label  >Education</label>
                        {{ form_widget(formedit.education, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="form-group">
                        <label  >Skills</label>
                        {{ form_widget(formedit.skills, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="form-group">
                        <label  >location</label>
                        {{ form_widget(formedit.location, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="form-group">
                        <label  >Notes</label>
                        {{ form_widget(formedit.notes, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="">
                        <label class="required">Roles</label>
                        {% for role in formedit.roles %}
                            <div class="form-check">
                                {{ form_widget(role, { 'attr': {'class': 'form-check-input'} }) }}
                                {{ form_label(role) }}
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Valider</button>
                </div>
            {{ form_end(formedit) }}
        </div>
    </div>
</div>
{% endblock %}