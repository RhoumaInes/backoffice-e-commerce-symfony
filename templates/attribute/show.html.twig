{% extends 'base.html.twig' %}

{% block title %}Attribute{% endblock %}

{% block body %}
    <h1>Attribute</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ attribute.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ attribute.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ attribute.type }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ attribute.createdAt ? attribute.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ attribute.updatedAt ? attribute.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_attribute_index') }}">back to list</a>

    <a href="{{ path('app_attribute_edit', {'id': attribute.id}) }}">edit</a>

    {{ include('attribute/_delete_form.html.twig') }}
{% endblock %}
