        <!-- left column -->
        <div class="col-md-10">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Modifier prix</h3>
                </div>
                <div class="card-body">
                    {% if form_errors(form) %}
                        <div class="alert alert-danger">{{ form_errors(form) }}</div>
                    {% endif %} 
                    {{ include('carrier_price/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                </div>
            </div>
            <a href="{{ path('app_carrier_price_index', {'id':carrierid}) }}">Retour à la liste</a><br>
            {{ include('carrier_price/_delete_form.html.twig') }}
        </div>  
    </div>
{% endblock %}
