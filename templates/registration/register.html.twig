{% extends 'baseauth.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="limiter">
    <div class="container-login100" style="background-image: url('{{ asset('authentification/images/bg-01.jpg') }}');">
        <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}

            {{ form_start(registrationForm) }}
            <form method="post" class="login100-form validate-form">
                {% if form_errors(registrationForm) %}
                <div class="alert alert-danger">{{ form_errors(registrationForm) }}</div>
                {% endif %}
				

				<h1 class="login100-form-title p-b-49">
					Register
				</h1>
				
				<div class="wrap-input100 validate-input m-b-23" data-validate = "Last name is reauired">
					<span class="label-input100">Nom</span>
					{{ form_widget(registrationForm.lastname, { 'attr': {'class': 'input100'} }) }}
					<span class="focus-input100" data-symbol="&#xf206;"></span>
				</div>
				<div class="wrap-input100 validate-input m-b-23" data-validate = "First name is reauired">
					<span class="label-input100">Pr√©nom</span>
					{{ form_widget(registrationForm.firstname, { 'attr': {'class': 'input100'} }) }}
					<span class="focus-input100" data-symbol="&#xf206;"></span>
				</div>
				<div class="wrap-input100 validate-input m-b-23" data-validate = "Email is reauired">
					<span class="label-input100">Email</span>
					{{ form_widget(registrationForm.email, { 'attr': {'class': 'input100'} }) }}
					<span class="focus-input100" data-symbol="&#xf206;"></span>
				</div>
				
				<div class="wrap-input100 validate-input" data-validate="Password is required">
					<span class="label-input100">Password</span>
					{{ form_widget(registrationForm.plainPassword, { 'attr': {'class': 'input100'} }) }}
					<span class="focus-input100" data-symbol="&#xf190;"></span>
				</div>
				<div class="p-t-49 p-b-49">
					<label class="required">Roles</label>
					{% for role in registrationForm.roles %}
						<div class="form-check">
							{{ form_widget(role, { 'attr': {'class': 'form-check-input'} }) }}
							{{ form_label(role) }}
						</div>
					{% endfor %}
				</div>
                <div class="p-t-49 p-b-49">
                 {{ form_row(registrationForm.agreeTerms, { 'label': 'Accepter les conditions' }) }}
                </div>
				
                {{ form_row(registrationForm._token) }}
				<div class="container-login100-form-btn">
					<div class="wrap-login100-form-btn">
						<div class="login100-form-bgbtn"></div>
						<button class="login100-form-btn" type="submit">
							Register
						</button>
					</div>
				</div>
			</form>
            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
{% endblock %}
